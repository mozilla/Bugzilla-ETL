{
	"settings":{
		"index.number_of_shards":1,
		"index.number_of_replicas":0,
		"index.store.throttle.type": "merge",
		"index.store.throttle.max_bytes_per_sec": "2mb",
        "analysis": {
            "analyzer": {
                "bz_text_analyzer": {
                    "type":"standard",
                    "filter":["lowercase", "stop"],
                    "max_token_length":"20"
                }
            }
        }
	},
	"mappings": {
		"bug_comment": {
			"_all": {
				"enabled": false
			},
			"_source": {
				"compress": true,
				"enabled": true
			},
			"_id": {
				"path": "comment_id"
			},
			"properties": {
				"comment_id":{
					"type": "integer",
					"index": "not_analyzed",
					"store": "yes"
				},
				"bug_id":{
					"type": "integer",
					"index": "not_analyzed",
					"store": "yes"
				},
				"modified_by": {
					"index": "not_analyzed",
					"type": "string",
					"store": "yes"
				},
				"modified_ts": {
					"type": "long",
					"index": "not_analyzed",
					"store": "yes"
				},
				"isprivate":{
					"type": "integer",
					"index": "not_analyzed",
					"store": "yes"
				},
				"comment": {
                    "type":"multi_field",
                    "fields":{
                        "short_desc":{
                            "type":"string",
                            "index":"no",
                            "store":"yes"
                        },
                        "lowercase":{
                            "type":"string",
                            "index":"no",
                            "store":"yes"
                        },
                        "words":{
                            "type":"string",
                            "index":"analyzed",
                            "analyzer":"bz_text_analyzer",
                            "store":"no"
                        }
                    }
				}
			}
		}
	}
}